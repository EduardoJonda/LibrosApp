<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css">
  <title>Editar Libro</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Actualizar</h2>
			<a href="/" class="btn btn-default">Inicio</a>
			<br><br>
			<form method="post" action="/actualizar">
			  <div class="form-group">
				<label for="titulo">Titulo</label>
				<input type="text" name="libro[titulo]" value="<%= libro.titulo %>" class="form-control" id="titulo" placeholder="Titulo">
			  </div>

			  <div class="form-group">
				<label for="resumen">Resumen</label>
				<input type="text" name="libro[resumen]" value="<%= libro.resumen %>" class="form-control" id="resumen" placeholder="Resumen">
			  </div>

			  <div class="form-group">
				<label for="imagen">Imagen</label>
				<input type="text" name="libro[imagen]" class="form-control" value="<%= libro.imagen %>" id="imagen" placeholder="Imagen">
			  </div>

			  <div class="form-group">
				<label for="fecha">Fecha</label>
				<input type="date" name="libro[fecha]" class="form-control" value="<%= libro.fecha %>" id="fecha" placeholder="Fecha">
			  </div>

			<input type="hidden" name="libro[id]" value="<%= libro.libros_id %>">
			  <button  style="display: none;" id="btnForm" type="submit" class="btn btn-primary">Guardar Verdadero</button>
			  <p onclick="changeColor();" class="btn btn-primary">Guardar</p>
			</form>
		</div>
	</div>
</div>
<script>
function changeColor(newColor) {

    if (confirm("Esta seguro que desea modificar el libro seleccionado?")) {
		   document.getElementById("btnForm").click();
		    setTimeout(function(){
		   window.location.href = "http://localhost:3000/";
		   }, 3000);
    } else {

    }


  }
</script>
</body>
</html>